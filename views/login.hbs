{{#if errors}}
    <div class="errors">
        {{#each errors}}
            <p class="errors">{{this}}</p>
        {{/each}}
    </div>
{{/if}}



<form action="/auth/login" method="post">
    <input name="username" type="text" placeholder="Username" class="register">
    <input name="password" type="password" placeholder="Password" class="register">
    <button class="submit" id="login-btn">Login</button>
</form>


<div>
    <p>Don't have an account</p>
    <a href="">Register</a>
</div>